{
  "manifest_version": 3,
  "name": "Extens√£o Twitch",
  "version": "1.0",
  "description": "Testa content.js na Twitch.",
  "permissions": ["storage"],
  "host_permissions": ["*://*.twitch.tv/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
